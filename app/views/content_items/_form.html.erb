<%= form_with model: content_item do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.rich_text_area :body %>
  </div>

  <hr>

  <ul>
    <% content_item.user.social_networks.each do |network| %>
      <li class="social-item">
        <%= label_tag do %>
          <%= check_box_tag 'content_item[publishing_targets_attributes][][social_network_id]', network.id, content_item.social_network_ids.include?(network.id) %>
          <%= network.description %>
        <% end %>
        <b class="publish-date"> Publish Date: </b>
          <%= date_field_tag "content_item[publishing_targets_attributes][][publish_date]", Date.today%>
      </li>
    <% end %>
  </ul>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<style>
  .social-item {
    padding: 5px 0;
  }
  .publish-date {
    padding-left: 20px;
    padding-right: 5px;
  }
</style>